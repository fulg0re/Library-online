<!DOCTYPE html>
<html lang = "en">
    <!-- ***1*** Head tag-->
    <% include parts/head.ejs %>
    <!-- ***1*** -->
    <body>
        <div id="mainDiv">
            <!-- ***2*** Navigation Bar-->
            <% include parts/navBar.ejs %>
            <!-- ***2*** -->

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Taken Books</h3>
                </div>
                <div class="panel-body" id="qwe">
                    <!--content-->

                    <%if (locals.books) {%>
                    <% books.forEach(function(book) { %>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img src="<%=book.image%>" alt="<%=book.bookName%>" class="img-thumbnail" align="left">
                            <h2><%=book.bookName%></h2>
                            <h3>Available : <%=book.available%></h3>
                            <h3><em><%=book.shortInfo%></em></h3>
                            <div class="btn-group">
                                <button id="ReadMore" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    More... <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">More about the book</a></li>
                                    <li><a href="#">Take this book</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <%};%>


                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <p>Made by Pavlo Denys</p>
                </div>
            </div>
        </div>
    </body>
</html>
