<!DOCTYPE html>
<html lang = "en">
<!-- ***1*** Head tag-->
<% include parts/head.ejs %>
<!-- ***1*** -->
<body>
<div id="mainDiv">
    <!-- ***2*** Navigation Bar-->
    <% include parts/navBar.ejs %>
    <!-- ***2*** -->
    <% if (locals.error) { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Edit book</h3>
        </div>
        <div class="panel-body" id="qwe">
            <!--content-->
            <form role="form" method="post" action="/books/editBook" enctype="multipart/form-data">
                <img src="<%=book.image%>" alt="<%=book.bookName%>" class="img-thumbnail">


                <div class="form-group">
                    <label for="bookName" class="col-sm-2 control-label">Book Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="bookName" value="<%=book.bookName%>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="shortInfo" class="col-sm-2 control-label">Short Information</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="shortInfo" value="<%=book.shortInfo%>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullInfo" class="col-sm-2 control-label">Full Information</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="fullInfo" value="<%=book.fullInfo%>" required>
                    </div>
                </div>
                <div class="form-group">
                    <input type="file" name="book_cover" />
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <button type="submit" name="bookId" class="btn btn-primary" value="<%=book._id%>">Add book</button>
                    </div>
                </div>


            </form>




            </form>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <p>Made by Pavlo Denys</p>
        </div>
    </div>
</div>
</body>
</html>
